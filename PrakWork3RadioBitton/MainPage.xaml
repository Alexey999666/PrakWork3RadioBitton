<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrakWork3RadioBitton.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
            Source="koster.png" 

                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Приветствую путник"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Это программа создана для конвертирования разных длинн в метры. Так что если ты не умеешь считать пользуйся на здоровье "
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />
            <Button x:Name="btnInfo" Text="О программе" Clicked="btnInfo_Click" />

            <Button Text="Перейти к программе" x:Name="btnSwitchTab" Clicked="btnSwitchTab_Click"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
